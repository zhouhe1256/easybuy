<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="apptheme" parent="android:Theme.Holo.Light.DarkActionBar"></style>
    <style name="InfoDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="spinner_style">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">5dip</item>
    </style>

    <style name="hor_line">
        <item name="android:background">#e4e4e4</item>
    </style>

    <style name="main_title_text_style">
        <item name="android:textSize">@dimen/main_title</item>
        <item name="android:textColor">@color/title_text_color</item>
    </style>

    <style name="main_text_style">
        <item name="android:textSize">@dimen/sub_textSize</item>
        <item name="android:textColor">@color/main_text_color</item>
    </style>

    <style name="remind_text_style">
        <item name="android:textSize">@dimen/sub_textSize</item>
        <item name="android:textColor">@color/remind_color</item>
    </style>

    <style name="remind_color_text_style">
        <item name="android:textSize">@dimen/small_textSize</item>
        <item name="android:textColor">@color/sub_color</item>
    </style>

    <style name="edit_text_style">
        <item name="android:textSize">@dimen/sub_textSize</item>
        <item name="android:textColor">@color/main_text_color</item>
        <item name="android:textColorHint">@color/remind_color</item>
    </style>

    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">bottom</item>
    </style>
    <style name="NumberProgressBar_Default">
